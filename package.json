    "reason-js": "^0.0.16",
    "reason-react": "https://github.com/reasonml/reason-react.git"
  },
  "devDependencies": {
    "bs-platform": "^1.5.2",
    "npm-run-all": "^4.0.2",
    "webpack": "^2.2.1"
  }
}
